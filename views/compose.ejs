<%- include('partials/header') -%>

<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="form-group">
        <label for="">Title</label>
        <input type="title" class="form-control" name="postTitle" placeholder="Enter your Title">
    </div>

    <div class="form-group">
        <label for="">Post</label>
        <textarea type="post" class="form-control" name="postBody" placeholder="Enter your Text" rows="7"></textarea>
    </div>

    <button type="submit" class="btn btn-primary" name="button">Publish</button>
</form>

<%- include('partials/footer') -%>